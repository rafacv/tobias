<!DOCTYPE html>
<html>
<head>
  <title>Tobias</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="body">
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:error] %>
    <div class="error"><%= flash[:notice] %></div>
  <% end %>

  <div id="header">
    <h1><%= link_to("tobias", root_path) %></h1>
    <h2>your task manager application</h2>

    <%= render :partial => "shared/menu" %>
  </div>

  <div id="lists">
    <%= yield %>
  </div>

</body>
</html>
