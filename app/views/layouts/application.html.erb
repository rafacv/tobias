<!DOCTYPE html>
<html>
<head>
  <title>Tobias</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body class="body">
  <div id="header">
    <h1><%= link_to("tobias", root_path) %></h1>
    <h2>your task manager application</h2>

      <ul>
        <li><%= link_to('home', root_path) %></li>
      <% if user_signed_in? %>
        <li><%= link_to('my lists', lists_path) %></li>
        <li><%= link_to('watched lists', watchlists_path) %></li>
        <li><%= link_to('logout', destroy_user_session_path, :method => :delete) %></li>
      <% else %>
        <li><%= link_to('login', new_user_session_path) %></li>
        <li><%= link_to('signup', new_user_registration_path) %></li>
      <% end %>
        <li><%= link_to('about', about_path) %></li>
  </div>

  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <% if flash[:error] %>
    <div class="error"><%= flash[:notice] %></div>
  <% end %>

  <div id="content" class="right-lower-box">
    <%= yield %>
  </div>

  <div id="footer">
    <ul class="menu">
      <li><%= link_to("About", "#") %></li>
      <li><%= link_to("About", "#") %></li>
      <li><%= link_to("About", "#") %></li>
      <li><%= link_to("About", "#") %></li>
      <li><%= link_to("About", "#") %></li>
    </ul>
    <p>&copy; Copyright 2011</p>
  </div>
</body>
</html>
